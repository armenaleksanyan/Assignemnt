<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")    
    @Styles.Render("~/Content/kendo/css")    
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-right">
                @if (Request.IsAuthenticated && UserStories.Web.Utilities.SessionManager.UserInfo != null && UserStories.Web.Utilities.SessionManager.UserInfo.Id != 0)
                {
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Groups", "Groups", "Group")</li>
                            <li>@Html.ActionLink("Stories", "Stories", "Story")</li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer class="story_footer">
        <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
    </footer>    
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
