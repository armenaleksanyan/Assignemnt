<div id="storyForm">
    <input type="hidden" name="StoryId" id="hdnStoryId" />
    <ul class="ul-group">
        <li>
            <p class="bold" style="margin: 2px 0px 0 0;">Title</p>
            <input type="text" id="txtTitle" name="Title" class="k-textbox" required="" style="width:350px" data-required-msg="Title is required" />
            <span class="k-invalid-msg" data-for="Title"></span>
        </li>
        <li>
            <p class="bold" style="margin: 2px 0px 0 0">PostedOn</p>
            <input id="dpPostedOn" name="PostedOn" required="" style="width:350px" data-required-msg="PostedOn is required" />
            <span class="k-invalid-msg" data-for="PostedOn"></span>
        </li> 
        
        <li style="width: 350px; float: left;">
            <p class="bold" style="float: left; margin: 2px 0px 0 0; width: 155px; text-align: left;">Groups</p>
            <input type="hidden" name="Groups" id="hdnGroupId" />
            <div style="width: 350px">
                <select id="selGroupId" style="max-height:50px; overflow-y:scroll; width:95%" name="GroupId" required="" data-required-msg="Group is required"></select>
                <span class="k-invalid-msg" data-for="GroupId"></span>
            </div>
        </li>
            
        <li>
            <p class="bold" style="margin: 2px 0px 0 0">Description</p>
            <textarea id="txaDescription" name="Description" maxlength="400" class="k-textbox" style="width: 90%; margin-top: 0px" required="" data-required-msg="Description is required"></textarea>
            <span class="k-invalid-msg" data-for="Description"></span>
        </li>
        <li>
            <p class="bold" style="margin: 2px 0px 0 0">Content</p>
            <textarea id="txaContent" name="Content" maxlength="400" class="k-textbox" style="width: 90%; margin-top: 0px" required="" data-required-msg="Description is required"></textarea>
            <span class="k-invalid-msg" data-for="Content"></span>
        </li>
        <li style="width: 250px; margin-top: 20px">
            <button id="btnAddStory" type="button" class="k-button"><span>Save</span></button>
            <button id="btnCancel" type="button" class="k-button"><span>Cancel</span></button>
        </li>
    </ul>
</div>